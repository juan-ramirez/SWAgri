<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_general"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="SWAgri"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textSize="60sp" />

    <Button
        android:id="@+id/btnNewFinca"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:onClick="goNewFincaActivity"
        android:text="Nueva Finca"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnOldFinca"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="321dp"
        android:onClick="goOldFincaActivity"
        android:text="Finca Existente"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>